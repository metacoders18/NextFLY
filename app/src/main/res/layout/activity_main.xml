<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_layout"
                android:layout_marginTop="0dp"
                android:background="@drawable/head">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:background="@drawable/darkrectangle"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:layout_weight="2"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Expedition 57 Launch"
                            android:textSize="24sp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Date: October 11, 2018"
                            android:textSize="14sp"
                            android:textColor="#fff"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="9dp"
                        android:layout_weight="8">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:text="See more"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_expand_more_black_24dp"
                            android:contentDescription="TODO" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Launch: "
                    android:textStyle="italic"
                    android:layout_marginLeft="4dp"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:textColor="#fff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Load More"
                    android:textStyle="italic"
                    android:layout_marginLeft="4dp"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:textColor="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/reminder_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:padding="2dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="7">
                            <TextView
                                android:id="@+id/title_Launch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:text="Expedition 57 Launch"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/date_launch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:layout_marginLeft="2dp"
                                android:text="Date: October 26, 2018"
                                android:textColor="#fff"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/time_launch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:padding="2dp"
                                android:text="Time: 4:00 a.m. -- 5:30 a.m."
                                android:textColor="#fff"
                                android:textSize="11sp"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/btn_shape"
                                android:text="Remind Me"
                                android:textColor="#fff"
                                android:textSize="10sp"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="112dp"
                            android:orientation="vertical"
                            android:layout_weight="5">
                            <ImageView
                                android:id="@+id/thumbnail_img"
                                android:layout_width="match_parent"
                                android:layout_height="112dp"
                                android:src="@drawable/post"/>
                        </LinearLayout>





                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watch Live: "
                    android:textStyle="italic"
                    android:layout_marginLeft="4dp"
                    android:textSize="14dp"
                    android:textColor="#fff"/>


                <android.support.v7.widget.CardView
                    android:id="@+id/reminder_card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:padding="2dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="7">

                            <TextView
                                android:id="@+id/title_Launch2"
                                android:layout_width="match_parent"
                                android:layout_height="59dp"
                                android:padding="4dp"
                                android:text="ICON (Ionospheric Connection Explorer)"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="112dp"
                            android:orientation="vertical"
                            android:layout_weight="5">
                            <ImageView
                                android:id="@+id/thumbnail_img2"
                                android:layout_width="match_parent"
                                android:layout_height="112dp"
                                android:src="@drawable/post"/>
                        </LinearLayout>





                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>